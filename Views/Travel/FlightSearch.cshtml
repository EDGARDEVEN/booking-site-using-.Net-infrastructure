@model booking.Models.FlightSearchModel

<h1>Flight Search</h1>

<form asp-action="SearchFlights">
    <div class="form-group">
        <label asp-for="Origin">Origin</label>
        <input asp-for="Origin" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Destination">Destination</label>
        <input asp-for="Destination" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DepartureDate">Departure Date</label>
        <input asp-for="DepartureDate" type="date" class="form-control" />
    </div>
    <!-- Add other form fields as needed -->
    <button type="submit" class="btn btn-primary">Search Flights</button>
</form>